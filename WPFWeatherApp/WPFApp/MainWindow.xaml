<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Border>
        <StackPanel>
            <StackPanel x:Name="CityListPanel" Visibility="Collapsed">
                <!--#region -->
                <Grid Background="#6200EE">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="10 5" Grid.Column="0" FontSize="13">City List</TextBlock>
                    <Button Margin="10 5" Grid.Column="1">Add</Button>
                    <Button Margin="10 5" Grid.Column="2">Remove</Button>
                </Grid>

                <Grid x:Name="LocationList">
                </Grid>
                <!--#endregion-->
            </StackPanel>

            <StackPanel x:Name="ForecastPanel">
                <Grid Background="#6200EE">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="10 5" Grid.Column="0" FontSize="13">Weather Forecast</TextBlock>
                    <Button Click="btn_CityListClick" Margin="20 5" Grid.Column="1">City List</Button>
                </Grid>
                <TextBlock x:Name="CityName" FontSize="15" FontWeight="DemiBold" TextAlignment="Center">City Name</TextBlock>
                <TextBlock x:Name="Date" FontSize="10" TextAlignment="Center">Wed, 27 November</TextBlock>
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.8*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="Temp" Grid.Column="0" FontSize="100" TextAlignment="Center" >21&#186;C</TextBlock>
                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="MaxTemp" FontSize="50">25</TextBlock>
                        <TextBlock x:Name="MinTemp" FontSize="50">12</TextBlock>
                        <TextBlock x:Name="WindSpeed" FontSize="12" TextAlignment="Center">234 mps</TextBlock>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
